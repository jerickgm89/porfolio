---
interface Props {
    subtitle: string;
    style : string;
    color : string;
}

const { subtitle, style, color} = Astro.props;
---
<div>
  <p class=`text-2xl underline underline-offset-8 decoration-4 decoration-banner text-${color} my-4 font-${style}`>
        {subtitle}
    </p>
</div>
<slot/>
